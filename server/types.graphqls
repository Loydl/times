type Record @model {
  id: ID! @isUnique
  startTime: String!
  endTime: String!
  date: String!
  description: String!
  customer: Customer @relation(name: "CustomerOnRecord")
  project: Project! @relation(name: "ProjectOnRecord")
    author: User! @relation(name: "UserOnRecord")
}

type Customer @model {
  id: ID! @isUnique
  name: String!
  records: [Record!]! @relation(name: "CustomerOnRecord")
  projects:[Project!]! @relation(name: "ProjectOnCustomer")
}

type Project @model {
  id: ID! @isUnique
  name: String!
  customer: Customer @relation(name: "ProjectOnCustomer")
  records: [Record!]! @relation(name: "ProjectOnRecord")
}

